{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/minishell", // replace <your-program> with your executable
            "args": ["$PWD"], // any command-line arguments go here
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "", // name of a task to run before debugging starts (like building your program)
            "miDebuggerPath": "/usr/bin/gdb" // path to your gdb executable
        }
    ]
}